# Production environment configuration
# Copy to .env.prod and fill in values

# Required: Database password (change this!)
POSTGRES_PASSWORD=change_me_to_something_secure

# Required: Public URL of your app (e.g., https://dialogues.example.com)
FRONTEND_URL=https://dialogues.example.com

# Required: Session encryption key (generate with: openssl rand -hex 32)
SESSION_KEY=

# Google OAuth (optional - app works without, but no persistent accounts)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_CALLBACK_URL=https://dialogues.example.com/api/auth/google/callback

# LLM API keys (at least one required for conversations to work)
ANTHROPIC_API_KEY=
OPENAI_API_KEY=
GOOGLE_AI_API_KEY=

# Admin bootstrap (comma-separated emails that get ADMIN role on OAuth login)
ADMIN_EMAILS=you@example.com

# Optional: Site banner (HTML allowed, shown at top of every page)
# Example: This is a test deployment of <a href="https://example.com">AI Dialogues</a>
VITE_SITE_BANNER=
