{
  "name": "conversation-coach",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "concurrently \"pnpm -F @workspace/api dev\" \"pnpm -F @workspace/app dev\"",
    "dev:landing": "pnpm -F @workspace/landing dev",
    "build": "pnpm -r build",
    "test": "pnpm -r test",
    "test:api": "TEST_DATABASE_URL=\"postgresql://postgres:postgres@localhost:5432/conversation_coach_test\" pnpm -F @workspace/api test",
    "db:migrate": "pnpm -F @workspace/database migrate",
    "db:studio": "pnpm -F @workspace/database studio",
    "lint": "biome lint .",
    "format": "biome format --write .",
    "check": "biome check --write ."
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.10",
    "concurrently": "^9.2.1",
    "typescript": "^5.9.3"
  }
}
