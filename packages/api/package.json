{
  "name": "@workspace/api",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "dev:docker": "pnpm -F @workspace/database migrate:deploy && pnpm dev",
    "build": "tsc",
    "start": "node dist/server.js",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:llm": "tsx src/llm/smoke-test.ts",
    "llm:compare": "tsx src/llm/compare.ts",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.71.2",
    "@fastify/cookie": "^11.0.2",
    "@fastify/cors": "^11.2.0",
    "@fastify/oauth2": "^8.1.2",
    "@fastify/secure-session": "^8.3.0",
    "@fastify/session": "^11.1.1",
    "@fastify/websocket": "^11.2.0",
    "@google/generative-ai": "^0.24.1",
    "@trpc/server": "^11.8.1",
    "@workspace/database": "workspace:*",
    "dotenv": "^17.2.3",
    "fastify": "^5.6.2",
    "fastify-plugin": "^5.1.0",
    "openai": "^6.15.0",
    "ws": "^8.18.3",
    "zod": "^4.3.4"
  },
  "devDependencies": {
    "@types/node": "^25.0.3",
    "@types/ws": "^8.18.1",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.16"
  }
}
