# Database
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/conversation_coach?schema=public"

# API Server
PORT=3000
HOST=0.0.0.0
NODE_ENV=development

# Frontend
FRONTEND_URL=http://localhost:5173

# Session (generate: openssl rand -hex 32)
