# OpenAI: https://platform.openai.com/api-keys
OPENAI_API_KEY=
# Google AI: https://aistudio.google.com/apikey
GOOGLE_AI_API_KEY=

# Admin Bootstrap (comma-separated emails that get ADMIN role on OAuth login)
ADMIN_EMAILS=alice@example.com,bob@example.edu
