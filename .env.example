# Database
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/conversation_coach?schema=public"

# API Server
PORT=3000
HOST=0.0.0.0
NODE_ENV=development

# Frontend
FRONTEND_URL=http://localhost:5173

# Session encryption key (generate with: openssl rand -hex 32)
SESSION_KEY=

# Google OAuth (get from https://console.cloud.google.com/)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_CALLBACK_URL=http://localhost:3000/api/auth/google/callback

# AI Providers (at least one required for conversations)
# Anthropic: https://console.anthropic.com/
ANTHROPIC_API_KEY=
# OpenAI: https://platform.openai.com/api-keys
OPENAI_API_KEY=
# Google AI: https://aistudio.google.com/apikey
GOOGLE_AI_API_KEY=

# Admin Bootstrap (comma-separated emails that get ADMIN role on OAuth login)
ADMIN_EMAILS=alice@example.com,bob@example.edu

# Optional: Site banner (HTML allowed, shown at top of every page)
# Example: "This is a test deployment of <a href=\"https://example.com\">AI Dialogues</a>"
VITE_SITE_BANNER=