# Database
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/conversation_coach?schema=public"

# API Server
PORT=3000
HOST=0.0.0.0
NODE_ENV=development

# Frontend
FRONTEND_URL=http://localhost:5173

# Session encryption key (at least 32 characters)
# Generate with: openssl rand -hex 32
# Or just make up a random string of 32+ letters/numbers (e.g., mash your keyboard)
SESSION_KEY=

# Google OAuth (get from https://console.cloud.google.com/)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_CALLBACK_URL=http://localhost:3000/api/auth/google/callback

# AI Providers
# ============
# At least one key is required for AI conversations.
#
# RECOMMENDED: Start with Anthropic. The app defaults to Claude models.
# Anthropic: https://console.anthropic.com/
ANTHROPIC_API_KEY=
#
# OPTIONAL: Additional providers for custom scenarios
# OpenAI: https://platform.openai.com/api-keys
OPENAI_API_KEY=
# Google AI: https://aistudio.google.com/apikey
GOOGLE_AI_API_KEY=
#
# Note: If you only configure OpenAI or Google AI (not Anthropic),
# you'll need to create custom scenarios that specify those providers,
# as the built-in scenarios use Claude models.

# Admin Bootstrap (comma-separated emails that get ADMIN role on OAuth login)
ADMIN_EMAILS=alice@example.com,bob@example.edu

# Optional: Site banner (HTML allowed, shown at top of every page)
# Example: "This is a test deployment of <a href=\"https://example.com\">AI Dialogues</a>"
VITE_SITE_BANNER=